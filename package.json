{
  "name": "api.utopian.io",
  "version": "1.0.0",
  "description": "RESTful API for Utopian.io",
  "author": "Diego Pucci <me@diegopucci.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=4.8.0",
    "npm": ">=2.15.11",
    "yarn": ">=0.20.3"
  },
  "scripts": {
    "dev-server": "cross-env NODE_ENV=development PORT=4040 gulp serve",
    "start": "cross-env NODE_ENV=production PORT=443 gulp serve",
    "updater-posts": "node ./dist/updater-posts.js",
    "utopian-bot": "node ./dist/utopian-bot.js $REFRESH_TOKEN $CLIENT_SECRET",
    "stats-categories": "node ./dist/stats-categories.js",
    "stats-moderators-shares": "node ./dist/stats-moderators-shares.js",
    "stats-sponsors-shares": "node ./dist/stats-sponsors-shares.js",
    "stats-total-paid": "node ./dist/stats-total-paid.js",
    "stats-total-pending": "node ./dist/stats-total-pending.js",
    "stats-total-paid-sponsors": "node ./dist/stats-total-paid-sponsors.js",
    "stats-total-paid-moderators": "node ./dist/stats-total-paid-moderators.js",
    "start:debug": "cross-env DEBUG=api.utopian.io:* yarn start",
    "build": "gulp",
    "lint": "esw *.js server config --color",
    "lint:watch": "yarn lint -- --watch",
    "precommit": "yarn lint && yarn test",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors --compilers js:babel-core/register ./tests --recursive",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register ./tests --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:utopian-io/api.utopian.io.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "bluebird": "3.4.6",
    "body-parser": "1.15.2",
    "bs58": "^4.0.1",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "cors": "2.8.1",
    "debug": "^2.4.5",
    "diff-match-patch": "^1.0.0",
    "dotenv": "^4.0.0",
    "express": "4.14.0",
    "express-jwt": "5.1.0",
    "express-validation": "1.0.1",
    "express-winston": "2.1.2",
    "helmet": "3.1.0",
    "http-status": "^1.0.1",
    "joi": "10.0.6",
    "jsonwebtoken": "7.1.9",
    "method-override": "^2.3.5",
    "mongoose": "4.7.4",
    "morgan": "1.7.0",
    "querystring": "^0.2.0",
    "ramda": "^0.25.0",
    "sc2-sdk": "0.0.5",
    "secure-random": "^1.1.1",
    "speakingurl": "^14.0.1",
    "steem": "^0.6.4",
    "superagent": "^3.7.0",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.53",
    "chai": "^3.4.1",
    "cross-env": "3.1.3",
    "del": "^2.2.0",
    "gulp": "3.9.1",
    "gulp-nodemon": "^2.0.6",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-typescript": "^3.2.3",
    "mocha": "3.2.0",
    "run-sequence": "^1.1.5",
    "supertest": "2.0.1",
    "supertest-as-promised": "4.0.2",
    "typescript": "^2.6.1"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
